<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addlead.ViewLeadsFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.97" />

    <HorizontalScrollView
        android:id="@+id/horizontalScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbarSize="@dimen/size_0dp"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ToggleButton
                android:id="@+id/allToggle"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_marginEnd="@dimen/size_8dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_background"
                android:textAllCaps="false"
                android:textOff="All"
                android:textOn="All"
                android:textSize="@dimen/font_12sp"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.21" />

            <ToggleButton
                android:id="@+id/highToggle"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_marginStart="@dimen/size_8dp"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_marginEnd="@dimen/size_8dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_background"
                android:textAllCaps="false"
                android:textOff="High"
                android:textOn="High"
                android:textSize="@dimen/font_12sp"
                app:layout_constraintStart_toEndOf="@id/allToggle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.21" />

            <ToggleButton
                android:id="@+id/mediumToggle"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_marginStart="@dimen/size_8dp"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_marginEnd="@dimen/size_8dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_background"
                android:textAllCaps="false"
                android:textOff="Medium"
                android:textOn="Medium"
                android:textSize="@dimen/font_12sp"
                app:layout_constraintStart_toEndOf="@id/highToggle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.21" />


            <ToggleButton
                android:id="@+id/lowToggle"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_marginStart="@dimen/size_8dp"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_background"
                android:textAllCaps="false"
                android:textOff="Low"
                android:textOn="Low"
                android:textSize="@dimen/font_12sp"
                app:layout_constraintStart_toEndOf="@id/mediumToggle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.21" />

            <ToggleButton
                android:id="@+id/interestedToggle"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_marginStart="@dimen/size_8dp"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_weight="1.5"
                android:background="@drawable/toggle_background"
                android:textAllCaps="false"
                android:textOff="Interested"
                android:textOn="Interested"
                android:textSize="@dimen/font_12sp"
                app:layout_constraintStart_toEndOf="@id/mediumToggle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.21" />

            <ToggleButton
                android:id="@+id/notInterestedToggle"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_marginStart="@dimen/size_8dp"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_weight="1.5"
                android:background="@drawable/toggle_background"
                android:textAllCaps="false"
                android:textOff="Not Interested"
                android:textOn="Not Interested"
                android:textSize="@dimen/font_12sp"
                app:layout_constraintStart_toEndOf="@id/mediumToggle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.21" />

            <ToggleButton
                android:id="@+id/lowBudgetToggle"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_marginStart="@dimen/size_8dp"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_weight="1.5"
                android:background="@drawable/toggle_background"
                android:textAllCaps="false"
                android:textOff="Low Budget"
                android:textOn="Low Budget"
                android:textSize="@dimen/font_12sp"
                app:layout_constraintStart_toEndOf="@id/mediumToggle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.21" />

            <ToggleButton
                android:id="@+id/junkLeadToggle"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_marginStart="@dimen/size_8dp"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_weight="1.5"
                android:background="@drawable/toggle_background"
                android:textAllCaps="false"
                android:textOff="Junk Lead"
                android:textOn="Junk Lead"
                android:textSize="@dimen/font_12sp"
                app:layout_constraintStart_toEndOf="@id/mediumToggle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.21" />

            <ToggleButton
                android:id="@+id/confirmedToggle"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_marginStart="@dimen/size_8dp"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_weight="1.5"
                android:background="@drawable/toggle_background"
                android:textAllCaps="false"
                android:textOff="Confirmed"
                android:textOn="Confirmed"
                android:textSize="@dimen/font_12sp"
                app:layout_constraintStart_toEndOf="@id/mediumToggle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.21" />

            <ToggleButton
                android:id="@+id/siteVisitDoneToggle"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_marginStart="@dimen/size_8dp"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_weight="1.5"
                android:background="@drawable/toggle_background"
                android:textAllCaps="false"
                android:textOff="Site Visit Done"
                android:textOn="Site Visit Done"
                android:textSize="@dimen/font_12sp"
                app:layout_constraintStart_toEndOf="@id/mediumToggle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.21" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/toggleGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="horizontalScroll" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtSearch"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5dp"
        android:background="@drawable/layout_border"
        android:hint="Search Lead"
        android:padding="@dimen/size_8dp"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/horizontalScroll" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeLead"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="@dimen/size_0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/edtSearch">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/leadsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>