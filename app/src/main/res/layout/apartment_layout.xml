<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/size_5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/size_5dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/apartmentName"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:text="Apartment Name"
            android:textColor="@color/black"
            android:textSize="@dimen/font_12sp"
            app:layout_constraintEnd_toStartOf="@id/ImgQrCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/apartmentFor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5dp"
            android:gravity="start"
            android:text="Apartment For"
            android:textColor="@color/black"
            android:textSize="@dimen/font_12sp"
            app:layout_constraintEnd_toStartOf="@id/ImgQrCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/apartmentName" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/noOfFloors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5dp"
            android:gravity="start"
            android:text="Flat Number"
            android:textColor="@color/black"
            android:textSize="@dimen/font_12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/apartmentFor"
            app:layout_constraintWidth_percent="0.5" />

        <ImageButton
            android:id="@+id/ImgInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_8dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_info_outline_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ImgQrCode"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ImgQrCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_8dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_qr_code"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@id/Imgedit"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/Imgedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_8dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>