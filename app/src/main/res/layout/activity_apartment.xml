<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shaikhomes.smartdiary.ApartmentActivity">

    <TextView
        android:id="@+id/propertyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/size_8dp"
        android:textColor="@color/c_jazz_berry_4"
        android:textSize="@dimen/font_16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/floorsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_5dp"
        app:layout_constraintTop_toBottomOf="@+id/propertyName" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/flatList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_5dp"
        app:layout_constraintTop_toBottomOf="@id/floorsList" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/roomList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_5dp"
        app:layout_constraintTop_toBottomOf="@id/flatList" />
</androidx.constraintlayout.widget.ConstraintLayout>