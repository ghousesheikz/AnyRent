<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:paddingBottom="@dimen/size_8dp"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:fontFamily="@font/font_bold"
        android:gravity="center"
        android:padding="@dimen/size_8dp"
        android:text="@string/employee_list"
        android:textColor="@color/white"
        android:textSize="@dimen/font_22sp"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/listScroll"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/titleHeader">

        <LinearLayout
            android:id="@+id/employeeList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/size_5dp"
            app:layout_constraintTop_toBottomOf="@id/titleHeader" />
    </ScrollView>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtAddNotes"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/layout_border"
        android:gravity="start"
        android:layout_marginStart="@dimen/size_8dp"
        android:layout_marginEnd="@dimen/size_8dp"
        android:hint="Add Notes"
        android:maxLines="3"
        android:padding="@dimen/size_5dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/listScroll" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUpdate"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginStart="@dimen/size_15dp"
        android:layout_marginTop="@dimen/size_35dp"
        android:layout_marginBottom="@dimen/size_15dp"
        android:layout_marginEnd="@dimen/size_15dp"
        android:background="@color/purple_500"
        android:text="@string/update"
        android:textColor="@color/c_white_1"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtAddNotes" />
</androidx.constraintlayout.widget.ConstraintLayout>