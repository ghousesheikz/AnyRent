<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_light_gray_7"
    tools:context="com.shaikhomes.smartdiary.ExpensesList">

    <LinearLayout
        android:id="@+id/filterLayout"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.95">

        <ToggleButton
            android:id="@+id/todayToggle"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_marginStart="@dimen/size_8dp"
            android:layout_marginTop="@dimen/size_8dp"
            android:layout_marginEnd="@dimen/size_8dp"
            android:layout_weight="1"
            android:background="@drawable/toggle_background"
            android:textAllCaps="false"
            android:textOff="Today"
            android:textOn="Today"
            android:textSize="@dimen/font_12sp"
            app:layout_constraintStart_toEndOf="@id/allToggle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.21" />

        <ToggleButton
            android:id="@+id/weekToggle"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_marginStart="@dimen/size_8dp"
            android:layout_marginTop="@dimen/size_8dp"
            android:layout_marginEnd="@dimen/size_8dp"
            android:layout_weight="1"
            android:background="@drawable/toggle_background"
            android:textAllCaps="false"
            android:textOff="Week"
            android:textOn="Week"
            android:textSize="@dimen/font_12sp"
            app:layout_constraintStart_toEndOf="@id/allToggle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.21" />

        <ToggleButton
            android:id="@+id/monthlyToggle"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_marginStart="@dimen/size_8dp"
            android:layout_marginTop="@dimen/size_8dp"
            android:layout_marginEnd="@dimen/size_8dp"
            android:layout_weight="1"
            android:background="@drawable/toggle_background"
            android:textAllCaps="false"
            android:textOff="Monthly"
            android:textOn="Monthly"
            android:textSize="@dimen/font_12sp"
            app:layout_constraintStart_toEndOf="@id/allToggle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.21" />

        <ToggleButton
            android:id="@+id/allToggle"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_marginTop="@dimen/size_8dp"
            android:layout_marginEnd="@dimen/size_8dp"
            android:layout_weight="1"
            android:background="@drawable/toggle_background"
            android:textAllCaps="false"
            android:textOff="All"
            android:textOn="All"
            android:textSize="@dimen/font_12sp"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.21" />
    </LinearLayout>

    <ToggleButton
        android:id="@+id/creditToggle"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginTop="@dimen/size_8dp"
        android:layout_marginEnd="@dimen/size_8dp"
        android:layout_weight="1"
        android:background="@drawable/toggle_background"
        android:textAllCaps="false"
        android:textOff="Credit"
        android:textOn="Credit"
        android:textSize="@dimen/font_12sp"
        app:layout_constraintEnd_toStartOf="@id/debitToggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterLayout"
        app:layout_constraintWidth_percent="0.45" />

    <ToggleButton
        android:id="@+id/debitToggle"
        android:layout_width="0dp"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginTop="@dimen/size_8dp"
        android:layout_marginEnd="@dimen/size_8dp"
        android:layout_weight="1"
        android:background="@drawable/toggle_background"
        android:textAllCaps="false"
        android:textOff="Debit"
        android:textOn="Debit"
        android:textSize="@dimen/font_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/creditToggle"
        app:layout_constraintTop_toBottomOf="@id/filterLayout"
        app:layout_constraintWidth_percent="0.45" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/expenseList"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="@dimen/size_0dp"
        app:layout_constraintBottom_toTopOf="@id/totalAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/creditToggle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@id/totalAmount" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/totalAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="@dimen/size_8dp"
        android:textColor="@color/black"
        android:textSize="@dimen/font_18sp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>