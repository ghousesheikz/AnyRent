<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_light_gray_7">

    <LinearLayout
        android:id="@+id/propertyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_8dp"
        android:background="@drawable/layout_border"
        android:orientation="horizontal"
        android:padding="@dimen/size_5dp"
        android:weightSum="1"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:layout_width="@dimen/size_50dp"
            android:layout_height="@dimen/size_50dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_apartment_logo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/apartmentName"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/size_8dp" />

        <ImageButton
            android:id="@+id/goBtn"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="@dimen/size_50dp"
            android:layout_gravity="end"
            android:background="?selectableItemBackgroundBorderless"
            android:rotation="270"
            android:src="@drawable/arrow_down" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cashLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_8dp"
        android:background="@drawable/layout_border"
        android:padding="@dimen/size_8dp"
        app:layout_constraintTop_toBottomOf="@id/propertyLayout">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/currentMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15dp"
            android:background="@drawable/button_bg"
            android:drawableEnd="@drawable/ic_dropdown"
            android:drawablePadding="@dimen/size_8dp"
            android:gravity="center"
            android:paddingStart="@dimen/size_15dp"
            android:paddingTop="@dimen/size_5dp"
            android:paddingEnd="@dimen/size_8dp"
            android:paddingBottom="@dimen/size_5dp"
            android:text="November"
            android:textColor="@color/c_white_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/cashBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_cash_flow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/currentMonth" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15dp"
            android:padding="@dimen/size_8dp"
            android:text="This Month Cash Flow"
            android:textColor="@color/c_black_1"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/cashBtn"
            app:layout_constraintTop_toBottomOf="@+id/currentMonth" />

        <LinearLayout
            android:id="@+id/progress_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/cashBtn">

            <!-- Completed Part (Green) -->
            <View
                android:id="@+id/completedView"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.3"
                android:background="#4CAF50" />

            <!-- Incomplete Part (Red) -->
            <View
                android:id="@+id/remainingView"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.7"
                android:background="#F44336" />

        </LinearLayout>

        <View
            android:id="@+id/pending"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="@dimen/size_8dp"
            android:background="#F44336"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar_layout" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtPending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_8dp"
            android:text="Pending"
            android:textColor="@color/c_black_1"
            app:layout_constraintBottom_toBottomOf="@id/pending"
            app:layout_constraintStart_toEndOf="@id/pending"
            app:layout_constraintTop_toTopOf="@id/pending" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pendingAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_8dp"
            android:text="₹ 0/-"
            android:textColor="#F44336"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/pending"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/pending" />

        <View
            android:id="@+id/received"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="@dimen/size_8dp"
            android:background="#4CAF50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pending" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtReceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_8dp"
            android:text="Received"
            android:textColor="@color/c_black_1"
            app:layout_constraintBottom_toBottomOf="@id/received"
            app:layout_constraintStart_toEndOf="@id/received"
            app:layout_constraintTop_toTopOf="@id/received" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/receivedAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_8dp"
            android:text="₹ 0/-"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/received"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/received" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/size_8dp"
            android:layout_marginTop="@dimen/size_15dp"
            android:layout_marginEnd="@dimen/size_8dp"
            android:background="@color/c_black_1"
            app:layout_constraintTop_toBottomOf="@id/received" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_8dp"
            android:text="Total Amount"
            android:textColor="@color/c_black_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/totalAmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_8dp"
            android:text="₹ 0/-"
            android:textColor="@color/c_black_1"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/txtTotal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtTotal" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/bedsLayout"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_12dp"
        android:background="@drawable/beds_bg"
        android:orientation="vertical"
        android:padding="@dimen/size_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cashLayout"
        app:layout_constraintWidth_percent="0.46">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Available/Total Beds"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtBedsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_8dp"
            android:letterSpacing="0.2"
            android:text="0/0"
            android:textColor="@color/white"
            android:textSize="@dimen/font_20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/unpaidLayout"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_12dp"
        android:background="@drawable/unpaid_bg"
        android:orientation="vertical"
        android:padding="@dimen/size_10dp"
        app:layout_constraintStart_toEndOf="@id/bedsLayout"
        app:layout_constraintTop_toBottomOf="@+id/cashLayout"
        app:layout_constraintWidth_percent="0.46">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="UnPaid/Total Tenants"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTenantsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_8dp"
            android:letterSpacing="0.2"
            android:text="0/0"
            android:textColor="@color/white"
            android:textSize="@dimen/font_20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/expenseLayout"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_12dp"
        android:background="@drawable/expenses_bg"
        android:orientation="vertical"
        android:padding="@dimen/size_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bedsLayout"
        app:layout_constraintWidth_percent="0.46">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="This Month Expenses"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtExpense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_8dp"
            android:letterSpacing="0"
            android:text="₹0/-"
            android:textColor="@color/white"
            android:textSize="@dimen/font_20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tenantsLayout"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_12dp"
        android:background="@drawable/tenants_bg"
        android:orientation="vertical"
        android:padding="@dimen/size_10dp"
        app:layout_constraintStart_toEndOf="@id/bedsLayout"
        app:layout_constraintTop_toBottomOf="@+id/unpaidLayout"
        app:layout_constraintWidth_percent="0.46">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tenants On Notics"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_8dp"
            android:letterSpacing="0"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/font_20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/securityLayout"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8dp"
        android:layout_marginTop="@dimen/size_12dp"
        android:layout_marginEnd="@dimen/size_8dp"
        android:background="@drawable/security_bg"
        android:orientation="vertical"
        android:padding="@dimen/size_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expenseLayout"
        app:layout_constraintWidth_percent="0.95">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Total Security Deposit from Tenants"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtSecurityDeposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/size_8dp"
            android:letterSpacing="0"
            android:text="₹0/-"
            android:textColor="@color/white"
            android:textSize="@dimen/font_20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>