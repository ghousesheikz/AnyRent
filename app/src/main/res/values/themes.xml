<resources>
    <!-- Base application theme. -->
    <style name="Theme.SmartDiary" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/font_medium</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SmartDiary.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SmartDiary.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="LoadDialogTheme" parent="Theme.SmartDiary">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.SmartDiary.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.SmartDiary.DialogHeader">
        <item name="android:paddingBottom">@dimen/size_10dp</item>
        <item name="android:paddingTop">@dimen/size_11dp</item>
        <item name="android:textSize">@dimen/font_18sp</item>
        <item name="android:layout_marginTop">@dimen/size_15dp</item>
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textColor">@color/c_black_2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:animateOnClick">false</item>
        <item name="android:gravity">center</item>
    </style>
</resources>